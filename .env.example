# ============================================================
# ClawBot AI â€” Environment Variables
# Copy this to .env and fill in your values
# ============================================================

# === Binance API ===
BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_api_secret
BINANCE_TESTNET=true

# === AI Provider ===
# Options: groq / deepseek / gemini / claude / kimi
AI_PROVIDER=groq
AI_MODEL=llama-3.3-70b-versatile
AI_API_KEY=your_ai_api_key
AI_TEMPERATURE=0.3
AI_MAX_TOKENS=2000

# Optional fallback AI
AI_FALLBACK_PROVIDER=
AI_FALLBACK_MODEL=
AI_FALLBACK_API_KEY=

# === Trading ===
LEVERAGE=20
TRADING_SYMBOLS=BTCUSDT,ETHUSDT,SOLUSDT,BNBUSDT,XRPUSDT,DOGEUSDT,AVAXUSDT,LINKUSDT
MAX_POSITIONS=5
MIN_ORDER_USDT=5

# Safety SL/TP (between cycles fallback)
SAFETY_SL_PCT=8.0
SAFETY_TP_PCT=15.0

# Risk per trade (% by balance tier)
RISK_TIER_TINY=20.0
RISK_TIER_SMALL=10.0
RISK_TIER_MEDIUM=7.0
RISK_TIER_LARGE=4.0
RISK_TIER_XL=2.5

# === Timeframes ===
TF_PRIMARY=5m
TF_SECONDARY=15m
TF_TERTIARY=1h
CANDLES_PRIMARY=200
CANDLES_SECONDARY=100
CANDLES_TERTIARY=48

# === News ===
CRYPTOPANIC_API_KEY=your_cryptopanic_key
NEWS_COUNT=20
NEWS_TIMEOUT_SECONDS=15

# === Notifications ===
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
DISCORD_WEBHOOK_URL=

# === Database (Supabase) ===
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key

# === Logging ===
LOG_LEVEL=INFO
LOG_FILE=logs/clawbot.log
